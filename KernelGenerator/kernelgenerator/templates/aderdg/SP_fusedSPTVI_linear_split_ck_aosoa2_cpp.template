{% macro idxW3(z,y,x) %}{{i.index_3(z,y,x,nDof,nDof)}}{% endmacro %}
{% macro idxLuh(z,y,x,n) %}{{i.index_4(z,y,x,n,nDof,nDof,nData)}}{% endmacro %}
{% macro idxLPi(z,n,y,x) %}{{i.index_fixed_4(z,n,y,x,nPar*nDof2Pad,nDof2Pad,nDof)}}{% endmacro %}
