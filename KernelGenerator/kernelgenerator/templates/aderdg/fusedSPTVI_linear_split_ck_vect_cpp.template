    // store M*rhs in gradQ [z][n][x], fuse n and x
    {{ m.matmul('flux_y_or_z_sck_vect', 'lQi_next', 'dudxT_by_dx', 'gradQ', '0', '0', '0') | indent(4) }}{##}
    for (int z = 0; z < {{nDof}} ; z++){
