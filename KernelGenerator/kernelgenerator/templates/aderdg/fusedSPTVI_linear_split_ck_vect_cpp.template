  // ncp in x
  {{ m.matmul('gradQ_x_sck_vect', 'dudx_by_dx', 'lQhi', 'gradQ', '0', '0', '0') | indent(4) }}{##}
  for (int yz = 0; yz < {{nDof*nDof3D}}; yz++) {
