/**

 GRMHD, ie. MHD on static curved background spacetime,
 with Limiting ADER-DG Solver.

 Here: GRMHD_FV testcase for testing NCP in Godunov.
 Using AccretionDisk2D.

 */
exahype-project DIM 

  peano-kernel-path const          = ./Peano
  exahype-path const               = ./ExaHyPE
  output-directory const           = ./ApplicationExamples/DIM/DIM_FV
  architecture const               = noarch
  log-file                         = whatever.log

  computational-domain
    dimension const                = 2 
    width                          = 2.0, 2.0
    offset                         =-1.0, -1.0
    end-time                       = 5.0
  end computational-domain
  
  shared-memory
    identifier               = dummy
    configure                = {}
    cores                    = 1
    properties-file          = sharedmemory.properties
  end shared-memory  
  
  distributed-memory
    identifier               = static_load_balancing
    configure                = {hotspot,fair,ranks-per-node:1}
    buffer-size              = 64
    timeout                  = 60
  end distributed-memory

  global-optimisation
    fuse-algorithmic-steps          = none
    fuse-algorithmic-steps-rerun-factor   = 0.99
    fuse-algorithmic-steps-diffusion-factor   = 0.99
    spawn-predictor-as-background-thread = off
    spawn-amr-background-threads         = off
    disable-vertex-exchange-in-time-steps = on
    time-step-batch-factor           = 0.0
    disable-metadata-exchange-in-batched-time-steps = off
    double-compression = 0.0
    spawn-double-compression-as-background-thread = off
  end global-optimisation

  solver Finite-Volumes DIMSolver
    variables const                = sigma:6,vel:3,lambda:1,mu:1,rho:1,alpha:1,xi:1
    patch-size const               = 4
    maximum-mesh-size              = 0.1
    time-stepping                  = global
    kernel const                   = generic::musclhancock 
    language const                 = C

    plot vtk::Cartesian::cells::ascii ConservedWriter
      variables const = 14     
      time      = 0.0
      repeat    = 0.01
      output    = ./vtk-output/conserved
      select    = x:0.0,y:0.0
    end plot

  end solver


end exahype-project
