/**

 The GRMHD PDE in the C++ formulation with FV solver.

 */
exahype-project GRMHD

  peano-kernel-path const          = ./Peano
  exahype-path const               = ./ExaHyPE
  output-directory const           = ./ApplicationExamples/GRMHD/GRMHD_cpp
  architecture const               = noarch
  log-file                         = whatever.log

  computational-domain
    dimension const                = 2
    width                          = 1.0, 1.0
    offset                         = 0.0, 0.0
    end-time                       = 10.0
  end computational-domain
  
  shared-memory
    identifier               = dummy
    configure                = {}
    cores                    = 1
    properties-file          = sharedmemory.properties
  end shared-memory  
  
  distributed-memory
    identifier               = static_load_balancing
    configure                = {hotspot,fair,ranks-per-node:1}
    buffer-size              = 64
    timeout                  = 60
  end distributed-memory

  global-optimisation
    fuse-algorithmic-steps          = all
    fuse-algorithmic-steps-rerun-factor   = 0.99
    fuse-algorithmic-steps-diffusion-factor   = 0.99
    spawn-predictor-as-background-thread = off
    spawn-amr-background-threads         = off
    disable-vertex-exchange-in-time-steps = on
    time-step-batch-factor           = 0.0
    disable-metadata-exchange-in-batched-time-steps = off
    double-compression = 0.0
    spawn-double-compression-as-background-thread = off
  end global-optimisation

  solver Finite-Volumes GRMHDSolver_FV
    /* NOTE: Since exahype currently does not compute the derivatives of
     * the parameters, we cannot put the material parameters extra.
     * Also currently dont store ,detg:1
     **/
    variables const                = rho:1,vel:3,E:1,B:3,psi:1,lapse:1,shift:3,gij:6,coordinates:3,check:1
    //parameters const               = pos:3,check:1
    patch-size const               = 8
    maximum-mesh-size              = 0.11111133333339
    maximum-mesh-depth             = 0
    time-stepping                  = global
    type const         = godunov
    terms const        = flux,ncp,source
    optimisation const = generic
    language const                 = C
    constants  = okay:erste-zeile-darf-nicht-leer-sein,
       initialdata/name:shocktube,
       boundaries/left:exact,
       boundaries/right:exact,
       boundaries/top:exact,
       boundaries/bottom:exact,
       boundaries/front:exact,
       boundaries/back:exact,
       initialdata/sep_x:0.5,
       initialdata/right/alpha:1.0,
       initialdata/right/beta/x:0,
       initialdata/right/beta/y:0,
       initialdata/right/beta/z:0,
       initialdata/right/rho:0.125, 
       initialdata/right/vel/x:0,   
       initialdata/right/vel/y:0,   
       initialdata/right/vel/z:0,   
       initialdata/right/press:0.1, 
       initialdata/right/Bmag/x:0.5,
       initialdata/right/Bmag/y:-1.0,
       initialdata/right/Bmag/z:0.0, 
       initialdata/left/alpha:1.0,
       initialdata/left/beta/x:0, 
       initialdata/left/beta/y:0, 
       initialdata/left/beta/z:0, 
       initialdata/left/rho:1.0,      
       initialdata/left/vel/x:0,      
       initialdata/left/vel/y:0,                    
       initialdata/left/vel/z:0,                      
       initialdata/left/press:1.0,                    
       initialdata/left/Bmag/x:0.5,                  
       initialdata/left/Bmag/y:+1.0,                 
       initialdata/left/Bmag/z:0.0                   

    plot vtk::Cartesian::vertices::ascii ConservedWriter
      variables const = 23
      time      = 0.0
      repeat    = 0.00590278
      output    = ./vtk-output/conserved
    end plot

    plot vtk::Cartesian::cells::ascii IntegralsWriter
      variables const = 0
      time = 1000.0
      repeat = 0.000001
      output = ./output/global-integrals
    end plot
    
    plot vtu::Cartesian::vertices::ascii PrimitiveWriter
      variables const = 23
      time      = 0.0
      repeat    = 0.000666667
      output    = ./vtk-output/primitive
    end plot

    plot Carpet::Cartesian::Vertices::HDF5 PrimitiveWriter
      variables const = 0
      time = 1000.0
      repeat = 0.000001
      output = ./hdf5-output/primitive
    end plot
    
    plot Carpet::Cartesian::Vertices::HDF5 PrimitiveWriter
      variables const = 0
      time = 1000.0
      repeat = 0.000001
      output = ./hdf5-output/slice
      select = y:0.5
    end plot

  end solver
end exahype-project
