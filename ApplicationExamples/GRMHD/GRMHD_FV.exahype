/**

 GRMHD, ie. MHD on static curved background spacetime,
 with Limiting ADER-DG Solver.

 Here: GRMHD_FV testcase for testing NCP in Godunov.
 Using AccretionDisk2D.

 */
exahype-project GRMHD

  peano-kernel-path const          = ./Peano
  exahype-path const               = ./ExaHyPE
  output-directory const           = ./ApplicationExamples/GRMHD/GRMHD
  architecture const               = hsw
  log-file                         = whatever.log
  plotter-subdirectory const = Writers

  computational-domain
    dimension const                = 3
//    width                          = 30.0, 30.0, 30.0
//    offset                         = -15., -15., -15. 
    width                          = 10.0,10.0,10.0
    offset                         = -5.0, -5.0, -5.0
    end-time                       = 10.001
  end computational-domain
  
  shared-memory
    identifier               = dummy
    configure                = {background-tasks:3}
    cores                    = 4
    properties-file          = sharedmemory.properties
    thread-stack-size        = 8000000
  end shared-memory  
  
  distributed-memory
    identifier       = static_load_balancing
    configure        = {hotspot,fair,ranks-per-node:6}
    buffer-size      = 64000
    timeout          = 3600
  end distributed-memory

  global-optimisation
    fuse-algorithmic-steps          = all
    fuse-algorithmic-steps-rerun-factor   = 0.99
    fuse-algorithmic-steps-diffusion-factor   = 0.99
    spawn-predictor-as-background-thread = on
    spawn-update-as-background-thread = on
    spawn-amr-background-threads         = on
    disable-vertex-exchange-in-time-steps = on
    time-step-batch-factor           = 0.0
    disable-metadata-exchange-in-batched-time-steps = off
    double-compression = 0.0
    spawn-double-compression-as-background-thread = off
  end global-optimisation

  solver Finite-Volumes GRMHDSolver_FV
    variables const                = rho:1,vel:3,E:1,B:3,psi:1,lapse:1,shift:3,gij:6
    patch-size const               = 5
    maximum-mesh-size              = 1.2
    time-stepping                  = global
    //type const         = musclhancock
    type const  = godunov
    terms const        = flux,ncp
    optimisation const = generic
    language const                 = C


/*
    plot vtk::Cartesian::vertices::ascii ConservedWriter
      variables const = 19
      time      = 0.0
      repeat    = 0.00590278
      output    = ./vtk-output/conserved
    end plot
    plot vtk::Cartesian::vertices::ascii ConservedWriter
      variables const = 19
      time      = 10000.0
      repeat    = 0.00590278
      output    = ./vtk-output/cartesian-2d
      select    = z:0.0
    end plot

*/

   plot vtk::Cartesian::cells::ascii Density
      variables const = 2
      time      = 0.0001
      repeat    = 0.5
      output    = ./vtk-output/density
    end plot

/*
    plot vtk::Cartesian::cells::ascii PrimitiveWriter
      variables const = 19
      time      = 0.0
      repeat    = 0.1
      output    = ./vtk-output/primitive
    end plot
*/

    plot vtk::Cartesian::cells::ascii IntegralsWriter
       variables const = 0
       time = 0.0
       repeat = 0.10
       output = ./output/global-integrals
     end plot 

    plot user::defined TimingStatistics_FV
      variables const = 0
      time = 0.0
      repeat = 0.10
      output = ./output/timing-benchmarks
    end plot

    plot vtu::Cartesian::vertices::ascii ConservedWriter
         variables const = 1
         time      = 0.0
         repeat    = 0.5
         output    = ./vtk-output/primitive
    end plot


    plot Carpet::Cartesian::Vertices::hdf5 PrimitiveWriter
      variables const = 19
      time = 0.0
      repeat = 0.01
      select = one_file_per_timestep:False,all_unknowns_in_one_file:False
      output = ./hdf5-output/fv-prims3d
    end plot


    plot Carpet::Cartesian::Vertices::hdf5 H5Writer
      variables const = 9
      time = 0.0
      repeat = 0.01
      select = one_file_per_timestep:False,all_unknowns_in_one_file:False
      output = ./hdf5-output/fv-demo3d
    end plot
    
    plot Carpet::Cartesian::Vertices::hdf5 H5Writer
      variables const = 9
      time = 0.0
      repeat = 0.01
      select = z:0,one_file_per_timestep:False,all_unknowns_in_one_file:False
      output = ./hdf5-output/fv-demo2d
    end plot
    
    plot Carpet::Cartesian::Vertices::hdf5 H5Writer
      variables const = 9
      time = 0.0
      repeat = 0.01
      select = y:0,z:0,one_file_per_timestep:False,all_unknowns_in_one_file:False
      output = ./hdf5-output/fv-demo1d
    end plot

  end solver


end exahype-project
