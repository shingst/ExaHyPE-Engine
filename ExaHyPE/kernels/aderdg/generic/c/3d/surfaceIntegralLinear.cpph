#include <tarch/la/Vector.h>

#include "../../../../KernelUtils.h"
#include "kernels/aderdg/generic/Kernels.h"

#if DIMENSIONS == 3

namespace kernels {
namespace aderdg {
namespace generic {
namespace c {

template <typename SolverType, int numberOfVariables, int basisSize>
void surfaceIntegralLinear(double *lduh, const double *const lFhbnd,
                           const tarch::la::Vector<DIMENSIONS, double> &dx) {
  constexpr int order = basisSize - 1;

  idx4 idx_lduh(basisSize, basisSize, basisSize, numberOfVariables);
  idx4 idx_lFhbnd(2 * DIMENSIONS, basisSize, basisSize, numberOfVariables);

  // x faces
  for (int i = 0; i < basisSize; i++) {
    for (int j = 0; j < basisSize; j++) {
      // #if defined(_GLL)
      // const double weight = kernels::gaussLobattoWeights[order][i] *
      //                       kernels::gaussLobattoWeights[order][j];
      // #else
      // const double weight = kernels::gaussLegendreWeights[order][i] *
      //                       kernels::gaussLegendreWeights[order][j];
      // #endif
      const double weight = SolverType::weights[order][i] *
                            SolverType::weights[order][j];
    
      const double updateSize = weight / dx[0];

      for (int k = 0; k < basisSize; k++) {
        // left flux minus right flux
        for (int l = 0; l < numberOfVariables; l++) {
          lduh[idx_lduh(i, j, k, l)] -=
              (lFhbnd[idx_lFhbnd(1, i, j, l)] * SolverType::FCoeff[order][1][k] +
               lFhbnd[idx_lFhbnd(0, i, j, l)] * SolverType::FCoeff[order][0][k]) *
              updateSize;
        }
      }
    }
  }

  // y faces
  for (int i = 0; i < basisSize; i++) {
    for (int j = 0; j < basisSize; j++) {
      for (int k = 0; k < basisSize; k++) {
        //#if defined(_GLL)
        //const double weight = kernels::gaussLobattoWeights[order][i] *
        //                      kernels::gaussLobattoWeights[order][k];
        //#else
        //const double weight = kernels::gaussLegendreWeights[order][i] *
        //                      kernels::gaussLegendreWeights[order][k];
        //#endif
        const double weight = SolverType::weights[order][i] * 
                              SolverType::weights[order][k];
        const double updateSize = weight / dx[1];

        // back flux minus front flux
        for (int l = 0; l < numberOfVariables; l++) {
          lduh[idx_lduh(i, j, k, l)] -=
              (lFhbnd[idx_lFhbnd(3, i, k, l)] * SolverType::FCoeff[order][1][j] +
               lFhbnd[idx_lFhbnd(2, i, k, l)] * SolverType::FCoeff[order][0][j]) *
              updateSize;
        }
      }
    }
  }

  // z faces
  for (int i = 0; i < basisSize; i++) {
    for (int j = 0; j < basisSize; j++) {
      for (int k = 0; k < basisSize; k++) {
        //#if defined(_GLL)
        //const double weight = kernels::gaussLobattoWeights[order][j] *
        //                     kernels::gaussLobattoWeights[order][k];
        //#else
        //const double weight = kernels::gaussLegendreWeights[order][j] *
        //                      kernels::gaussLegendreWeights[order][k];
        //#endif
        const double weight = SolverType::weights[order][j] * 
                              SolverType::weights[order][k];
        const double updateSize = weight / dx[2];

        // bottom flux minus top flux
        for (int l = 0; l < numberOfVariables; l++) {
          lduh[idx_lduh(i, j, k, l)] -=
              (lFhbnd[idx_lFhbnd(5, j, k, l)] * SolverType::FCoeff[order][1][i] +
               lFhbnd[idx_lFhbnd(4, j, k, l)] * SolverType::FCoeff[order][0][i]) *
              updateSize;
        }
      }
    }
  }
}

}  // namespace c
}  // namespace generic
}  // namespace aderdg
}  // namespace kernels

#endif  // DIMENSIONS == 3
