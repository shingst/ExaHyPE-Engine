template<typename T>
OutcomeEntry<T>::OutcomeEntry(T* data, DeliveryStatus status)
 : _data(data),
   _status(status)
{}

template<typename T>
OutcomeEntry<T>::~OutcomeEntry()
{}

template<typename T>
DeliveryStatus OutcomeEntry<T>::getStatus() const
{
  return _status;
}

template<typename T>
T* OutcomeEntry<T>::getData() const
{
  return _data;
}

